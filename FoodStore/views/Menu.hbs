        .nav a, .navbar-brand {
            color: black !important;
        }

        .item {
            /*border: 1px solid black;*/
            position: relative;
            width: 100%;
            min-height: 200px;
        }

            /*
        .item p {
            position: absolute;
            bottom: 15px;
            left: 5px;
            display: none;
